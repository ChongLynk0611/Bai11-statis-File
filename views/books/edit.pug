extends ../layout/layout.pug 
block  content
    h1 edit book
    p title: #{book.title}
    p description: #{book.description}
    form(action="/books/edit/"+book.id,method="POST",class="form-inline")
        lable title
        input(type="text" Name="title",class="form-control ml-2")
        button(class="btn-primary ml-2") edit
    a(href="/books",class="btn btn-dark") back